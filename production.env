# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=sqlite://./data/production.db

# Security
JWT_SECRET=smoocho_bill_production_jwt_secret_2025_secure_random_string
SESSION_SECRET=smoocho_bill_production_session_secret_2025_secure_random_string

# CORS Configuration
CORS_ORIGIN=http://localhost,http://localhost:3000,http://localhost:5000

# External Services
PAYTM_ENV=production
PAYTM_WEBSITE=WEBPROD
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# File Storage

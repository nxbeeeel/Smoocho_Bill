{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "src/**/*.ts",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "5000",
        "LOG_LEVEL": "info",
        "ENABLE_LOGGING": "true",
        "ENABLE_METRICS": "true",
        "ENABLE_HEALTH_CHECKS": "true"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "5000",
        "LOG_LEVEL": "debug",
        "ENABLE_LOGGING": "true",
        "ENABLE_METRICS": "true",
        "ENABLE_HEALTH_CHECKS": "true"
      }
    }
  }
}
